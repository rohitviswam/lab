<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/option1_radio_button"
            android:layout_width="160dp"
            android:layout_height="113dp"
            android:drawableLeft="@drawable/mango"
            android:text="Option 1" />

        <RadioButton
            android:id="@+id/option2_radio_button"
            android:layout_width="245dp"
            android:layout_height="66dp"
            android:drawableLeft="@drawable/banana"
            android:text="Option 2" />

        <RadioButton
            android:id="@+id/option3_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:drawableLeft="@drawable/apple"
            android:text="Option 3" />

    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <Button
        android:id="@+id/view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Database" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Database" />

</LinearLayout>
